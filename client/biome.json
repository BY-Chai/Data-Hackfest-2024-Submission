{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "include": ["./app/*.ts"],
    "rules": {
      "recommended": true,
      "style": {
        "noDefaultExport": "off",
        "noNonNullAssertion": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "bracketSameLine": true,
      "indentStyle": "space"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  }
}
